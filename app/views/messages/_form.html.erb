<%= form_with model: @message do |form| %>
    <div class=" col-sm-3 mb-3 mt-3">
      <%= form.label :query, "Title:" %>
      <%= form.text_field :title ,:class => "form-control form-control-lg", :required => true %>
    </div>
    <div class="col-sm-3 mb-3">
      <%= form.label :query, "Description:",:class => "px-3" %>
      <%= form.text_area :description,:class => "form-control form-control-sm ", size: "10x4"  %>     
    </div>    
       <%= form.button :submit , :class=>"btn btn-primary py-2"%> 
  <% end %>
